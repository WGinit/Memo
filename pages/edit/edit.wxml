<!--编辑备忘录-->
<view class="edit-memo">
 <view class="head">
    <view class="left" bindtap="back"><span class="iconfont icon-left"></span><span>返回</span></view>
    <view class="title right" bindtap="saveMemo"><span class="iconfont icon-save"></span><span>保存</span></view>
    <view class="right memo-del" bindtap="delMemo"><span class="iconfont icon-del"></span><span>删除</span></view>  
 </view>
 <view class="memo-text">
  <view class="memo-time">上次编辑:{{time}}</view>
  <view class="memo-title"><textarea bindinput="memoTitle" placeholder="输入标题" maxlength="-1" auto-height value="{{title}}"/></view>
  
  <view class="memo-area"><textarea bindinput="getMemoValue" maxlength="-1" auto-height placeholder="输入或粘贴备忘录内容" value="{{value}}"/></view>
 </view>
</view>

